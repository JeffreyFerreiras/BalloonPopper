<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BalloonPopper.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:BalloonPopper.Maui.Pages"
    FlyoutBehavior="Disabled">

    <!-- Main Menu Page -->
    <ShellContent 
        Title="Menu"
        Route="MenuPage" 
        ContentTemplate="{DataTemplate pages:MenuPage}" />

    <!-- Game Modes Page -->
    <ShellContent 
        Title="Game Modes"
        Route="GameModesPage" 
        ContentTemplate="{DataTemplate pages:GameModesPage}" />

    <!-- Settings Page -->
    <ShellContent 
        Title="Settings"
        Route="SettingsPage" 
        ContentTemplate="{DataTemplate pages:SettingsPage}" />

    <!-- Game Page -->
    <ShellContent 
        Title="Game"
        Route="GamePage" 
        ContentTemplate="{DataTemplate pages:GamePage}" />

    <!-- Main Page (keep for compatibility) -->
    <ShellContent 
        Title="Welcome"
        Route="MainPage" 
        ContentTemplate="{DataTemplate pages:MainPage}" />

</Shell>
