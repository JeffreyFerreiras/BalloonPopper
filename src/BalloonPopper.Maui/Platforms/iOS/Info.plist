	<string>BalloonPopper</string>
	<key>CFBundleShortVersionString</key>
	<string>1.0</string>
	<key>CFBundleVersion</key>
	<string>1</string>
	<key>CFBundleIdentifier</key>
	<string>com.balloonpopper.maui</string>
	
