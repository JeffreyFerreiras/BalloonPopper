<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BalloonPopper.Maui.Pages.GamePage"
             Title="Balloon Popper"
             NavigationPage.HasNavigationBar="False">

    <Grid>
        <!-- Game Canvas (Catherine Bot will implement the actual game UI here) -->
        <Border x:Name="GameCanvas"
                BackgroundColor="SkyBlue"
                Stroke="Transparent"
                Padding="0">
            
            <!-- Placeholder content -->
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="ðŸŽˆ"
                       FontSize="100"
                       HorizontalOptions="Center" />
                <Label Text="Game Canvas"
                       FontSize="24"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="White" />
                <Label Text="Catherine Bot will implement the actual game here"
                       FontSize="14"
                       HorizontalOptions="Center"
                       TextColor="LightGray"
                       Margin="0,10,0,0" />
                
                <!-- Temporary controls for testing -->
                <Button Text="ðŸ  Back to Menu"
                        BackgroundColor="Red"
                        TextColor="White"
                        CornerRadius="10"
                        Margin="0,30,0,0"
                        x:Name="BackToMenuButton"
                        Clicked="OnBackToMenuClicked" />
            </StackLayout>
        </Border>

        <!-- Game UI Overlay -->
        <StackLayout x:Name="GameUIOverlay"
                     VerticalOptions="Start"
                     HorizontalOptions="Fill"
                     Padding="20,10"
                     IsVisible="True">
            
            <!-- Top HUD -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <!-- Score -->
                <StackLayout Grid.Column="0" Orientation="Horizontal">
                    <Label Text="Score:"
                           TextColor="White"
                           FontAttributes="Bold"
                           VerticalOptions="Center" />
                    <Label x:Name="ScoreLabel"
                           Text="{Binding CurrentScore}"
                           TextColor="Yellow"
                           FontSize="18"
                           FontAttributes="Bold"
                           VerticalOptions="Center" />
                </StackLayout>
                
                <!-- Lives/Time -->
                <StackLayout Grid.Column="1" 
                           Orientation="Horizontal"
                           HorizontalOptions="Center">
                    <Label x:Name="LivesTimeLabel"
                           Text="{Binding LivesOrTimeDisplay}"
                           TextColor="White"
                           FontSize="16"
                           FontAttributes="Bold"
                           VerticalOptions="Center" />
                </StackLayout>
                
                <!-- Pause Button -->
                <Button Grid.Column="2"
                        Text="â¸ï¸"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="20"
                        HorizontalOptions="End"
                        WidthRequest="50"
                        HeightRequest="50"
                        x:Name="PauseButton"
                        Clicked="OnPauseClicked" />
            </Grid>
        </StackLayout>

        <!-- Pause Menu Overlay -->
        <Border x:Name="PauseOverlay"
                BackgroundColor="Black"
                Opacity="0.8"
                IsVisible="False">
            <StackLayout VerticalOptions="Center" 
                         HorizontalOptions="Center"
                         Spacing="20">
                
                <Label Text="â¸ï¸ Game Paused"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center" />
                
                <Button Text="â–¶ï¸ Resume"
                        BackgroundColor="Green"
                        TextColor="White"
                        CornerRadius="10"
                        WidthRequest="200"
                        x:Name="ResumeButton"
                        Clicked="OnResumeClicked" />
                
                <Button Text="ðŸ”„ Restart"
                        BackgroundColor="Orange"
                        TextColor="White"
                        CornerRadius="10"
                        WidthRequest="200"
                        x:Name="RestartButton"
                        Clicked="OnRestartClicked" />
                
                <Button Text="ðŸ  Main Menu"
                        BackgroundColor="Red"
                        TextColor="White"
                        CornerRadius="10"
                        WidthRequest="200"
                        x:Name="MainMenuButton"
                        Clicked="OnMainMenuClicked" />
            </StackLayout>
        </Border>

    </Grid>
</ContentPage>
