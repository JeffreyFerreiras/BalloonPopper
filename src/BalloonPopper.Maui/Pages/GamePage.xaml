<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             x:Class="BalloonPopper.Maui.Pages.GamePage"
             Title="Balloon Popper"
             ios:Page.UseSafeArea="True"
             NavigationPage.HasNavigationBar="False"
             Padding="{OnIdiom Phone='0,8,0,8', Tablet='0,12,0,12', Desktop='0,12,0,12'}">

    <Grid>
        <!-- Game Canvas -->
        <Border x:Name="GameCanvas"
                BackgroundColor="SkyBlue"
                Stroke="Transparent"
                Padding="0" />

        <!-- Game UI Overlay -->
        <StackLayout x:Name="GameUIOverlay"
                     VerticalOptions="Start"
                     HorizontalOptions="Fill"
                     Padding="{OnIdiom Phone='12,8', Tablet='20,12', Desktop='20,12'}"
                     IsVisible="True">
            
            <!-- Top HUD -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <!-- Score -->
                <StackLayout Grid.Column="0" Orientation="Horizontal">
                    <Label Text="Score:"
                           TextColor="White"
                           FontAttributes="Bold"
                           VerticalOptions="Center" />
                    <Label x:Name="ScoreLabel"
                           Text="{Binding CurrentScore}"
                           TextColor="Yellow"
                           FontSize="18"
                           FontAttributes="Bold"
                           VerticalOptions="Center" />
                </StackLayout>
                
                <!-- Lives/Time -->
                <StackLayout Grid.Column="1" 
                           Orientation="Horizontal"
                           HorizontalOptions="Center">
                    <Label x:Name="LivesTimeLabel"
                           Text="{Binding LivesOrTimeDisplay}"
                           TextColor="White"
                           FontSize="16"
                           FontAttributes="Bold"
                           VerticalOptions="Center" />
                </StackLayout>
                
                <!-- Pause Button -->
                <Button Grid.Column="2"
                        Text="â¸ï¸"
                        BackgroundColor="Transparent"
                        TextColor="White"
                        FontSize="{OnIdiom Phone=18, Tablet=20, Desktop=20}"
                        HorizontalOptions="End"
                        WidthRequest="{OnIdiom Phone=44, Tablet=56, Desktop=56}"
                        HeightRequest="{OnIdiom Phone=44, Tablet=56, Desktop=56}"
                        x:Name="PauseButton"
                        Clicked="OnPauseClicked" />
            </Grid>
        </StackLayout>

        <!-- Pause Menu Overlay -->
        <Border x:Name="PauseOverlay"
                BackgroundColor="Black"
                Opacity="0.8"
                IsVisible="False">
            <StackLayout VerticalOptions="Center" 
                         HorizontalOptions="Center"
                         Spacing="16"
                         Padding="{OnIdiom Phone='16', Tablet='20', Desktop='20'}"
                         MaximumWidthRequest="{OnIdiom Phone=380, Tablet=460, Desktop=500}">
                
                <Label Text="â¸ï¸ Game Paused"
                       FontSize="{OnIdiom Phone=24, Tablet=28, Desktop=28}"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center" />
                
                <Button Text="â–¶ï¸ Resume"
                        BackgroundColor="Green"
                        TextColor="White"
                        CornerRadius="10"
                        HorizontalOptions="Fill"
                        MinimumHeightRequest="{OnIdiom Phone=44, Tablet=52, Desktop=52}"
                        x:Name="ResumeButton"
                        Clicked="OnResumeClicked" />
                
                <Button Text="ðŸ”„ Restart"
                        BackgroundColor="Orange"
                        TextColor="White"
                        CornerRadius="10"
                        HorizontalOptions="Fill"
                        MinimumHeightRequest="{OnIdiom Phone=44, Tablet=52, Desktop=52}"
                        x:Name="RestartButton"
                        Clicked="OnRestartClicked" />
                
                <Button Text="ðŸ  Main Menu"
                        BackgroundColor="Red"
                        TextColor="White"
                        CornerRadius="10"
                        HorizontalOptions="Fill"
                        MinimumHeightRequest="{OnIdiom Phone=44, Tablet=52, Desktop=52}"
                        x:Name="MainMenuButton"
                        Clicked="OnMainMenuClicked" />
            </StackLayout>
        </Border>

    </Grid>
</ContentPage>
