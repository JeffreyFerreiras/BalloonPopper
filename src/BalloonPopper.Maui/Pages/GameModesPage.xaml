<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             x:Class="BalloonPopper.Maui.Pages.GameModesPage"
             Title="Game Modes"
             ios:Page.UseSafeArea="True"
             BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}">

    <ScrollView>
        <Grid Padding="{OnIdiom Phone='16,12', Tablet='24,16', Desktop='24,16'}">
            <ContentView HorizontalOptions="CenterAndExpand"
                         MaximumWidthRequest="{OnIdiom Phone=420, Tablet=700, Desktop=800}">
                <StackLayout Spacing="20">
                    <!-- Header -->
                    <Label Text="ðŸ† Choose Your Challenge"
                           FontSize="28"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="White"
                           Margin="0,20,0,30" />

                    <!-- Classic Mode -->
                    <Frame BackgroundColor="ForestGreen" 
                           CornerRadius="15" 
                           HasShadow="True">
                        <StackLayout>
                            <Label Text="ðŸŽˆ Classic Mode"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   TextColor="White" />
                            <Label Text="Pop balloons as they appear. Get higher scores with faster pops!"
                                   FontSize="14"
                                   TextColor="LightGray"
                                   Margin="0,5,0,10" />
                            <Button Text="Play Classic"
                                    BackgroundColor="DarkGreen"
                                    TextColor="White"
                                    CornerRadius="10"
                                    HorizontalOptions="Fill"
                                    MinimumHeightRequest="{OnIdiom Phone=44, Tablet=52, Desktop=52}"
                                    x:Name="ClassicModeButton"
                                    Clicked="OnClassicModeClicked" />
                        </StackLayout>
                    </Frame>

                    <!-- Time Attack Mode -->
                    <Frame BackgroundColor="DarkOrange" 
                           CornerRadius="15" 
                           HasShadow="True">
                        <StackLayout>
                            <Label Text="â° Time Attack"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   TextColor="White" />
                            <Label Text="Pop as many balloons as possible in 60 seconds!"
                                   FontSize="14"
                                   TextColor="LightGray"
                                   Margin="0,5,0,10" />
                            <Button Text="Start Time Attack"
                                    BackgroundColor="Red"
                                    TextColor="White"
                                    CornerRadius="10"
                                    HorizontalOptions="Fill"
                                    MinimumHeightRequest="{OnIdiom Phone=44, Tablet=52, Desktop=52}"
                                    x:Name="TimeAttackButton"
                                    Clicked="OnTimeAttackClicked" />
                        </StackLayout>
                    </Frame>

                    <!-- Endless Mode -->
                    <Frame BackgroundColor="MediumPurple" 
                           CornerRadius="15" 
                           HasShadow="True">
                        <StackLayout>
                            <Label Text="âˆž Endless Mode"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   TextColor="White" />
                            <Label Text="Keep popping until you miss too many balloons!"
                                   FontSize="14"
                                   TextColor="LightGray"
                                   Margin="0,5,0,10" />
                            <Button Text="Go Endless"
                                    BackgroundColor="DarkMagenta"
                                    TextColor="White"
                                    CornerRadius="10"
                                    HorizontalOptions="Fill"
                                    MinimumHeightRequest="{OnIdiom Phone=44, Tablet=52, Desktop=52}"
                                    x:Name="EndlessModeButton"
                                    Clicked="OnEndlessModeClicked" />
                        </StackLayout>
                    </Frame>

                    <!-- Precision Mode -->
                    <Frame BackgroundColor="SteelBlue" 
                           CornerRadius="15" 
                           HasShadow="True">
                        <StackLayout>
                            <Label Text="ðŸŽ¯ Precision Mode"
                                   FontSize="22"
                                   FontAttributes="Bold"
                                   TextColor="White" />
                            <Label Text="Only special balloons count. Miss one and it's game over!"
                                   FontSize="14"
                                   TextColor="LightGray"
                                   Margin="0,5,0,10" />
                            <Button Text="Test Precision"
                                    BackgroundColor="DarkSlateBlue"
                                    TextColor="White"
                                    CornerRadius="10"
                                    HorizontalOptions="Fill"
                                    MinimumHeightRequest="{OnIdiom Phone=44, Tablet=52, Desktop=52}"
                                    x:Name="PrecisionModeButton"
                                    Clicked="OnPrecisionModeClicked" />
                        </StackLayout>
                    </Frame>

                    <!-- Back Button -->
                    <Button Text="â¬…ï¸ Back to Menu"
                            BackgroundColor="Gray"
                            TextColor="White"
                            CornerRadius="10"
                            HorizontalOptions="Fill"
                            MinimumHeightRequest="{OnIdiom Phone=44, Tablet=52, Desktop=52}"
                            Margin="0,20,0,0"
                            x:Name="BackButton"
                            Clicked="OnBackClicked" />
                </StackLayout>
            </ContentView>
        </Grid>
    </ScrollView>
</ContentPage>
