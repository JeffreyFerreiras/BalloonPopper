<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             x:Class="BalloonPopper.Maui.Pages.MenuPage"
             Title="Balloon Popper"
             ios:Page.UseSafeArea="True"
             Padding="{OnIdiom Phone='16,12', Tablet='24,16', Desktop='24,16'}"
             BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource PrimaryDark}}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Section -->
        <StackLayout Grid.Row="0" VerticalOptions="Center">
            <Label Text="🎈" 
                   FontSize="72" 
                   HorizontalOptions="Center" />
            <Label Text="Balloon Popper" 
                   FontSize="36" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center" 
                   TextColor="White" />
            <Label Text="Pop balloons and have fun!" 
                   FontSize="16" 
                   HorizontalOptions="Center" 
                   TextColor="LightGray"
                   Margin="0,10,0,0" />
        </StackLayout>

        <!-- Menu Buttons -->
        <StackLayout Grid.Row="2" 
                     Spacing="20" 
                     VerticalOptions="Center"
                     HorizontalOptions="CenterAndExpand"
                     MaximumWidthRequest="{OnIdiom Phone=380, Tablet=560, Desktop=600}">
            
            <Button Text="🎮 Start Game"
                    x:Name="StartGameButton"
                    FontSize="20"
                    FontAttributes="Bold"
                    BackgroundColor="Green"
                    TextColor="White"
                    CornerRadius="25"
                    HorizontalOptions="Fill"
                    MinimumHeightRequest="{OnIdiom Phone=48, Tablet=56, Desktop=56}"
                    Clicked="OnStartGameClicked" />

            <Button Text="🏆 Game Modes"
                    x:Name="GameModesButton"
                    FontSize="18"
                    BackgroundColor="Orange"
                    TextColor="White"
                    CornerRadius="25"
                    HorizontalOptions="Fill"
                    MinimumHeightRequest="{OnIdiom Phone=44, Tablet=52, Desktop=52}"
                    Clicked="OnGameModesClicked" />

            <Button Text="⚙️ Settings"
                    x:Name="SettingsButton"
                    FontSize="18"
                    BackgroundColor="Blue"
                    TextColor="White"
                    CornerRadius="25"
                    HorizontalOptions="Fill"
                    MinimumHeightRequest="{OnIdiom Phone=44, Tablet=52, Desktop=52}"
                    Clicked="OnSettingsClicked" />

            <Button Text="ℹ️ About"
                    x:Name="AboutButton"
                    FontSize="18"
                    BackgroundColor="Purple"
                    TextColor="White"
                    CornerRadius="25"
                    HorizontalOptions="Fill"
                    MinimumHeightRequest="{OnIdiom Phone=44, Tablet=52, Desktop=52}"
                    Clicked="OnAboutClicked" />
        </StackLayout>

        <!-- Footer -->
        <Label Grid.Row="3" 
               Text="v1.0.0 - Made with ❤️ and .NET MAUI"
               FontSize="12"
               HorizontalOptions="Center"
               TextColor="LightGray"
               Margin="0,20,0,10" />
    </Grid>
</ContentPage>
